<div class="row"> 
    <div class="col-md-3 col-lg-3">
      <%= render :partial => "share/user-profile" %>
    </div>

    <div class="col-md-1 col-lg-1">
    </div>

    <div class="col-lg-8 col-md-8">
      <% @liked_tweets.each do |tweet| %>
        <div class="row tweets-list">  
          <div class="col-md-4 col-lg-4">
            <% if tweet.user.avatar? %>
                <%= image_tag tweet.user.avatar, class: "img-responsive" %>
            <% else %>
              <img src = "http://via.placeholder.com/200x200" >
            <% end %>
            <br><br>
          </div>
          <div class="col-md-8 col-lg-8">
              <%= tweet.user.name %><span><%= tweet.created_at %></span><br>
              <%= tweet.description %><br>
              <%= render :partial=>"share/tweet-like-btn", locals: {object: tweet} %>
              <%= link_to 'Replies ', tweet_replies_path(tweet) %><%= tweet.replies.size %>
          </div>
        </div>
      <% end %>
    </div>
</div>